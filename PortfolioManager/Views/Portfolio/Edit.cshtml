@model PortfolioManager.Models.CommodityDto

@{
	ViewData["Title"] = "Editace komodity";
}
<div class="text-center mt-5">
	<h1 class="text-primary">Editace komodity</h1>
</div>

<hr class="my-4 my-md-5 text-primary bg-primary" />

<div class="container">
	<div class="row d-flex align-items-center">
		<div class="col-12 col-md-4 d-flex flex-column align-items-center justify-content-center">
			<form asp-action="Edit" class="">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Name" class="control-label fw-bold"></label>
					<a href="#" data-toggle="tooltip" title="Libovolný název komodity."
					   class="ms-2 text-decoration-none">(info)</a>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<label asp-for="Amount" class="control-label fw-bold"></label>
					<a href="#" data-toggle="tooltip" title="Celkové množstí zakoupené komodity, zlato/stříbro v uncích."
					   class="ms-2 text-decoration-none">(info)</a>
					<input asp-for="Amount" class="form-control" />
					<span asp-validation-for="Amount" class="text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<label asp-for="InvestedMoney" class="control-label fw-bold"></label>
					<a href="#" data-toggle="tooltip" title="Celkový počet investovaných peněz do dané komodity."
					   class="ms-2 text-decoration-none">(info)</a>
					<input asp-for="InvestedMoney" class="form-control" />
					<span asp-validation-for="InvestedMoney" class="text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<label asp-for="Type" class="control-label fw-bold"></label>
					<a href="#" class="text-decoration-none" data-toggle="tooltip"
					   title="Typ komodity. Pro kovy ‘komodita‘, pro kryptoměny ‘krypto‘.">(info)</a>
					<input asp-for="Type" class="form-control" />
					<span asp-validation-for="Type" class="text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<label asp-for="ApiId" class="control-label fw-bold"></label>
					<a href="#" class="text-decoration-none" data-toggle="tooltip"
					   title="Id komodity pro získání ceny online. Pro zlato ‘gold‘, stříbro ‘silver‘, pro kryptoměny Id u dané kryptoměny na coingecko.com ">(info)</a>
					<input asp-for="ApiId" class="form-control" />
					<span asp-validation-for="ApiId" class="text-danger"></span>
				</div>
				<div class="form-group mt-3 d-flex justify-content-center">
					<input type="submit" value="Uložit" class="btn btn-primary" />
				</div>
				<div class="mt-3 d-flex justify-content-center">
					<a asp-action="Index">Zpět</a>
				</div>
			</form>
		</div>

		<div class="col-md-8 d-none d-md-block">
			<img src="~/img/commodities2.png" class="img-fluid" />
		</div>
	</div>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
		<script>
			$(function () {
				$('[data-toggle="tooltip"]').tooltip();
			});
		</script>
	}
}
