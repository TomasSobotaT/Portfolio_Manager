@model PortfolioManager.Data.Models.AccountViewModels.RegisterViewModel;



@{
	ViewData["title"] = "Registrace";
}
<div class="text-center mt-5 mb-4">
	<h1 class="text-primary">Registrace</h1>
</div>


<div class="container">
	<div class="row">

		<div class="col-12 col-md-4 offset-md-4 border border-dark rounded rounded-3 px-3 form_color">


			<form class="" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
				<div asp-validation-summary="All" class="text-danger"></div>

				<div class="mb-3">
					<label asp-for="Email" class="fw-bold"></label>
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Password" class="fw-bold"></label>
					<input asp-for="Password" class="form-control randomPassword"/>
					<span asp-validation-for="Password"></span>
				</div>

				<div class="mb-3">
					<label asp-for="ConfirmPassword" class="fw-bold"></label>
					<input asp-for="ConfirmPassword" class="form-control randomPassword" id="randomPassword" />
					<span asp-validation-for="ConfirmPassword"></span>
				</div>
				<div>
					<input type="button" id="getRandomPassword" value="Náhodné heslo" />
				</div>
				<div class="mb-3 d-flex justify-content-center">
					<button class="btn btn-primary" type="submit">Registrace</button>
				</div>
				<div class="form-group text-center my-3">
					<span class="d-block">Máte již účet?</span>
					<a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="button_register text-decoration-none">Přihlásit</a>
				</div>

			</form>
			<div class="d-flex justify-content-center">
			<img src="~/img/dollar-donation.gif" class="img-fluid" />
			</div>
		</div>

	</div>

</div>


				
@section Scripts {
	<script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
		<script src="~/js/random.js"></script>

	
	}