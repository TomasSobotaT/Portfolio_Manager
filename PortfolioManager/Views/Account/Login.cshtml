@model PortfolioManager.Data.Models.AccountViewModels.LoginViewModel



@{
	ViewData["title"] = "Přihlášení";
}

<div class="text-center mt-5 mb-4">
	<h1 class="text-primary">Přihlášení</h1>
</div>


<div class="container">
	<div class="row">

		<div class="col-12 col-md-4 offset-md-4 border border-dark rounded rounded-3 px-3 form_color">


			<form class="mb-5" method="post">
				<div asp-validation-summary="All" class="text-danger"></div>

				<div class="mb-3">
					<label asp-for="Email" class="fw-bold"></label>
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Password" class="fw-bold"></label>
					<input asp-for="Password" class="form-control" />
					<span asp-validation-for="Password"></span>
				</div>

				<div class="mb-3">
					<label asp-for="RememberMe" class="form-check-label fw-bold">
						<input asp-for="RememberMe" class="form-check-input" />
						@Html.DisplayNameFor(m => m.RememberMe)
					</label>
				</div>

				<div class="my-5 d-flex justify-content-center">
					<button class="btn btn-primary" type="submit">Přihlásit se</button>
				</div>
				<div class="form-group text-center my-3">
					<span class="d-block">Ještě nemáte účet?</span>
					<a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="button_register text-decoration-none">Zaregistrovat se</a>
				</div>

			</form>

			<div class="d-flex justify-content-center">
				<img src="~/img/dollar-stack.gif" class="img-fluid" />
			</div>
		</div>

	</div>

</div>